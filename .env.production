# Backend API configuration - Used when running standalone
VITE_BACKEND_HOST=localhost
VITE_BACKEND_PORT=8080
VITE_BACKEND_API_PATH=/api

# WebSocket configuration
VITE_WEBSOCKET_PROTOCOL=ws
VITE_WEBSOCKET_SECURE_PROTOCOL=wss
VITE_WEBSOCKET_HOST=localhost
VITE_WEBSOCKET_PORT=8080
VITE_WEBSOCKET_ENDPOINT=/chat

# Application configuration
VITE_APP_NAME=WebSocket Vue Demo
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=A simple WebSocket demonstration with Vue 3

# Reconnection configuration
VITE_WEBSOCKET_RECONNECT_TIMEOUT=5000
VITE_WEBSOCKET_PING_INTERVAL=10000
VITE_WEBSOCKET_CONNECTION_ATTEMPTS=10
VITE_WEBSOCKET_CONNECTION_INTERVAL=200

# Integration flag - set to true for production build
VITE_INTEGRATED_MODE=true
